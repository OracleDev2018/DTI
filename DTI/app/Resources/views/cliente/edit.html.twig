{% extends 'base.html.twig' %}
{% block title %}Cliente{% endblock %}
{% block body %}
{{ parent() }}
<section id="container" align="center" >
    <!--main content start-->
    <section id="main-content" align="center">
        <section class="wrapper" align="center">
          <div class="page-header">
					           <h1>Editar Cliente</h1>
				    </div>
              {{ form_start(edit_form) }}
              <div class="form-group" align="center"> <h3>Nombre  </h3> </div>
              <div class="form-group" align="center">
                     {{ form_widget(edit_form.nombre,
                     { 'attr' : {
                     'class' : 'form-control',
                      'style' : 'width: 500px'
                      } }) }}
             </div>
               <div class="form-group" align="center"> <h3>Apellido  </h3> </div>
             <div class="form-group" align="center">
                    {{ form_widget(edit_form.apellido,
                    { 'attr' : {
                    'class' : 'form-control',
                     'style' : 'width: 500px'
                     } }) }}
            </div>
              <div class="form-group" align="center"> <h3>Edad  </h3> </div>
            <div class="form-group" align="center">
                   {{ form_widget(edit_form.edad,
                   { 'attr' : {
                   'class' : 'form-control',
                    'style' : 'width: 500px'
                    } }) }}
           </div>
             <div class="form-group" align="center"> <h3>Sexo </h3> </div>
           <div class="form-group" align="center">
                  {{ form_widget(edit_form.sexo,
                  { 'attr' : {
                  'class' : 'form-control',
                   'style' : 'width: 500px'
                   } }) }}
          </div>


             <p>
               <input id="jorge" class="btn btn-success" type="submit" value="Editar" />
             </p>

      {{ form_end(edit_form) }}
        </section>
      </section>
      </section>
{% endblock %}
{% block footer %}

{% endblock %}
{% block javascripts %}
{{ parent() }}


{% endblock %}
