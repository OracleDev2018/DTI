{% extends 'base.html.twig' %}

{% block body %}
    <h1>Facturas list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Numerofactura</th>
                <th>Fechavencimiento</th>
                <th>Subtotal</th>
                <th>Iva</th>
                <th>Total</th>
                <th>Estadofactura</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for factura in facturas %}
            <tr>
                <td><a href="{{ path('factura_show', { 'id': factura.id }) }}">{{ factura.id }}</a></td>
                <td>{{ factura.numeroFactura }}</td>
                <td>{% if factura.fechaVencimiento %}{{ factura.fechaVencimiento|date('Y-m-d') }}{% endif %}</td>
                <td>{{ factura.subtotal }}</td>
                <td>{{ factura.iva }}</td>
                <td>{{ factura.total }}</td>
                <td>{{ factura.estadoFactura }}</td>
                <td>{% if factura.createdAt %}{{ factura.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if factura.updatedAt %}{{ factura.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('factura_show', { 'id': factura.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('factura_edit', { 'id': factura.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('factura_new') }}">Create a new factura</a>
        </li>
    </ul>
{% endblock %}
