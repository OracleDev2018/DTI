{% extends 'base.html.twig' %}
{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link href="{{ asset('flatlab/assets/advanced-datatable/media/css/demo_page.css') }}" rel="stylesheet"
        xmlns="http://www.w3.org/1999/html"/>
  <link rel="stylesheet" type="text/css" href="{{ asset('sweet_alert/dist/sweetalert.css') }}">
  <link href="{{ asset('flatlab/assets/advanced-datatable/media/css/demo_table.css') }}" rel="stylesheet" />
  <link rel="stylesheet" type="text/css" href="{{ asset('sweet_alert/dist/sweetalert.css') }}">
{% endblock %}
{% block body %}
{{ parent() }}
<section id="main-content">
        <section class="wrapper site-min-height">
          <div class="panel-body">
    <h1>Facturas</h1>

    <table class="table table-striped table-hover  table-responsive">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col"># Factura</th>
                <th scope="col"> Fecha Vencimiento</th>
                <th scope="col">Subtotal</th>
                <th scope="col">Iva</th>
                <th scope="col">Total</th>
                <th scope="col">Estadofactura</th>
                <th scope="col">Createdat</th>
                <th scope="col">Updatedat</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for factura in facturas %}
            <tr>
                <td scope="row"><a href="{{ path('factura_show', { 'id': factura.id }) }}">{{ factura.id }}</a></td>
                <td scope="row">{{ factura.numeroFactura }}</td>
                <td scope="row">{% if factura.fechaVencimiento %}{{ factura.fechaVencimiento|date('Y-m-d') }}{% endif %}</td>
                <td scope="row">{{ factura.subtotal }}</td>
                <td scope="row">{{ factura.iva }}</td>
                <td scope="row">{{ factura.total }}</td>
                <td scope="row">{{ factura.estadoFactura }}</td>
                <td scope="row">{% if factura.createdAt %}{{ factura.createdAt|date('Y-m-d ') }}{% endif %}</td>
                <td scope="row">{% if factura.updatedAt %}{{ factura.updatedAt|date('Y-m-d ') }}{% endif %}</td>
                <td><a class="btn btn-info" href="{{ path('factura_show', { 'id': factura.id }) }}">Ver </a></td>
                <!-- <td><a class="btn btn-warning" href="{{ path('factura_edit', { 'id': factura.id }) }}">Editar</a></td> -->

            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div align="center">
  <a class="btn btn-success" href="{{ path('factura_new') }}">Crear Nueva Factura</a>
</div>

      </div>
  </section>
  </section>
{% endblock %}
{% block javascripts %}
{{ parent() }}
<script type="text/javascript" charset="utf-8">
    $(document).ready(function() {
        $('#example').dataTable( {
            "aaSorting": [[ 0, "desc" ]]
        } );
    } );

</script>
<!--Select 2-->
<script src="{{ asset('select2/select2.js') }}"></script>
<!--Sweet Alert-->
<script src="{{ asset('sweet_alert/dist/sweetalert.min.js') }}"></script>
  <script type="text/javascript" src="{{ asset('flatlab/assets/bootstrap-fileupload/bootstrap-fileupload.js') }}"></script>
<!--jQuery DataTables-->
<script type="text/javascript" src="{{ asset('flatlab/jquery.dataTables.js') }}"></script>
<script type="text/javascript" src="{{ asset('flatlab/DT_bootstrap.js') }}"></script>

{% endblock %}
