{% extends 'base.html.twig' %}
{% block title %}Creacion de Articulo{% endblock %}
{% block body %}
{{ parent() }}
<section id="container" align="center" >
    <!--main content start-->
    <section id="main-content" align="center">
        <section class="wrapper" align="center">
          <div class="page-header">
            <div class="page-header">
                       <h1>Modificar Articulo</h1>
              </div>
    {{ form_start(edit_form) }}
    <div class="form-group" align="center"> <h3>Codigo Articulo  </h3> </div>
    <div class="form-group" align="center">
           {{ form_widget(edit_form.codProducto,
           { 'attr' : {
           'class' : 'form-control',
            'style' : 'width: 500px'
            } }) }}
   </div>
   <div class="form-group" align="center"> <h3>Nombre Articulo  </h3> </div>
   <div class="form-group" align="center">
          {{ form_widget(edit_form.nombreProducto,
          { 'attr' : {
          'class' : 'form-control',
           'style' : 'width: 500px'
           } }) }}
  </div>
  <div class="form-group" align="center"> <h3>Precio  </h3> </div>
  <div class="form-group" align="center">
         {{ form_widget(edit_form.precio,
         { 'attr' : {
         'class' : 'form-control',
          'style' : 'width: 500px'
          } }) }}
 </div>
 <div class="form-group" align="center"> <h3>Cantidad a Agregar  </h3> </div>
 <div class="form-group" align="center">
        {{ form_widget(edit_form.cantidadDisponible,
        { 'attr' : {
        'class' : 'form-control',
         'style' : 'width: 500px'
         } }) }}
</div>
<div class="form-group" align="center"> <h3>Fecha Vencimiento </h3> </div>
<div class="form-group" align="center">
       {{ form_widget(edit_form.fechaVencimiento,
       { 'attr' : {
       'class' : 'form-control',
        'style' : 'width: 500px'
        } }) }}
</div>
<div class="form-group" align="center"> <h3>Proveedores </h3> </div>
<div class="form-group" align="center">
       {{ form_widget(edit_form.idFProveedor,
       { 'attr' : {
       'class' : 'form-control',
        'style' : 'width: 500px'
        } }) }}
</div>
<div class="form-group" align="center"> <h3>Marca </h3> </div>
<div class="form-group" align="center">
       {{ form_widget(edit_form.idFMarca,
       { 'attr' : {
       'class' : 'form-control',
        'style' : 'width: 500px'
        } }) }}
</div>

        <input class="btn btn-success" type="submit" value="Guardar Modificacion" //>
    {{ form_end(edit_form) }}


  </section>
  </section>
  </section>
  {% endblock %}
  {% block footer %}

  {% endblock %}
  {% block javascripts %}
  {{ parent() }}


  {% endblock %}
