{% extends 'base.html.twig' %}

{% block body %}
    <h1>Articulos list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Codproducto</th>
                <th>Nombreproducto</th>
                <th>Precio</th>
                <th>Cantidaddisponible</th>
                <th>Fechavencimiento</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for articulo in articulos %}
            <tr>
                <td><a href="{{ path('articulo_show', { 'id': articulo.id }) }}">{{ articulo.id }}</a></td>
                <td>{{ articulo.codProducto }}</td>
                <td>{{ articulo.nombreProducto }}</td>
                <td>{{ articulo.precio }}</td>
                <td>{{ articulo.cantidadDisponible }}</td>
                <td>{% if articulo.fechaVencimiento %}{{ articulo.fechaVencimiento|date('Y-m-d') }}{% endif %}</td>
                <td>{% if articulo.createdAt %}{{ articulo.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if articulo.updatedAt %}{{ articulo.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('articulo_show', { 'id': articulo.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('articulo_edit', { 'id': articulo.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('articulo_new') }}">Create a new articulo</a>
        </li>
    </ul>
{% endblock %}
